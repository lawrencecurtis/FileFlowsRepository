#!/bin/bash

# Function to handle errors
function handle_error {
    echo "An error occurred. Exiting..."
    exit 1
}

# Check if the --uninstall option is provided
if [ "$1" == "--uninstall" ]; then
    echo "Uninstalling Intel VPL..."
    if apt-get remove -y libmfx1 onevpl-tools intel-media-va-driver-non-free libmfx-gen1.2 intel-opencl-icd; then
        echo "Intel VPL successfully uninstalled."
        exit 0
    else
        handle_error
    fi
fi

# Check if Intel VPL is installed
if command -v vpl-inspect &>/dev/null; then
    echo "Intel VPL is already installed."
    exit 0
fi

echo "Intel VPL is not installed. Installing..."

# Update package lists and install Intel VPL
if ! apt update || ! apt install -y libmfx1 onevpl-tools intel-media-va-driver-non-free libmfx-gen1.2 intel-opencl-icd; then
    handle_error
fi

echo "Installation complete."

# Verify installation
if command -v vpl-inspect &>/dev/null; then
    echo "Intel VPL successfully installed."
    exit 0
fi

echo "Failed to install Intel VPL."
exit 1
